{
  "name": "connected-web-tasklist",
  "description": "A simple PHP, HTML and JavaScript based task list viewer",
  "version": "0.1.0",
  "private": true,
  "license": "ISC",
  "author": "John Beech",
  "engines": {
    "node": ">=4.3.2"
  },
  "scripts": {
    "start": "node app.js",
    "deploy": "node deploy live-release",
    "test": "standard && mocha test/**/*.js --recursive",
