  },
  "devDependencies": {
    "assert": "^2.0.0",
    "express": "^4.17.1",
    "mocha": "^8.3.2",
    "standard": "^17.0.0"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "ignore": [
      "**/web/external"
    ]
  }
}
